{
  "name": "dream-destiny-travel-agency",
  "version": "1.0.0",
  "description": "Travel agency package management system",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build:css": "cd frontend && npx tailwindcss -i ./src/index.css -o ./src/styles/output.css --watch"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "tailwindcss": "^3.3.3",
    "postcss": "^8.4.27",
    "autoprefixer": "^10.4.14"
  }
}
